<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/text_clothes_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yifuleixing"/>

        <TextView
            android:id="@+id/text_work_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gongzuoleixing"/>

    </LinearLayout>



    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/image_dustbin"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/image_dustbin"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:background="@color/app_color_blue"
        android:src="@mipmap/icon_dustbin"/>

</RelativeLayout>