<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zzu.gfms.fragment.WorkStatisticsFragment">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height">

    </com.qmuiteam.qmui.widget.QMUITopBar>

    <RelativeLayout
        android:id="@+id/layout_select_start_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/app_color_blue_2_disabled">
        <TextView
            android:id="@+id/text_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="工作起始日期："/>

        <TextView
            android:id="@+id/text_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_start"
            android:layout_toEndOf="@+id/text_start"/>

        <TextView
            android:id="@+id/text_select_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="选择"
            android:drawableRight="@mipmap/icon_right_arrow_blue"
            android:drawableEnd="@mipmap/icon_right_arrow_blue"
            android:textColor="#13227a"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </RelativeLayout>

    <View
        style="@style/CommonDividerLine" />

    <RelativeLayout
        android:id="@+id/layout_select_end_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/app_color_blue_2_disabled">
        <TextView
            android:id="@+id/text_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="工作结束日期："/>

        <TextView
            android:id="@+id/text_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_end"
            android:layout_toEndOf="@+id/text_end"/>

        <TextView
            android:id="@+id/text_select_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="选择"
            android:drawableRight="@mipmap/icon_right_arrow_blue"
            android:drawableEnd="@mipmap/icon_right_arrow_blue"
            android:textColor="#13227a"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </RelativeLayout>

    <View
        style="@style/CommonDividerLine" />

    <RelativeLayout
        android:id="@+id/layout_choose_clothes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/app_color_blue_2_disabled">
        <TextView
            android:id="@+id/text_clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="衣服类型："/>

        <TextView
            android:id="@+id/text_clothes_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_clothes"
            android:layout_toEndOf="@+id/text_clothes"/>

        <TextView
            android:id="@+id/text_select_clothes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="选择"
            android:drawableRight="@mipmap/icon_right_arrow_blue"
            android:drawableEnd="@mipmap/icon_right_arrow_blue"
            android:textColor="#13227a"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </RelativeLayout>

    <View
        style="@style/CommonDividerLine" />

    <RelativeLayout
        android:id="@+id/layout_choose_work"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/app_color_blue_2_disabled">
        <TextView
            android:id="@+id/text_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="工作类型："/>

        <TextView
            android:id="@+id/text_work_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text_work"
            android:layout_toEndOf="@+id/text_work"/>

        <TextView
            android:id="@+id/text_select_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="选择"
            android:drawableRight="@mipmap/icon_right_arrow_blue"
            android:drawableEnd="@mipmap/icon_right_arrow_blue"
            android:textColor="#13227a"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/text_select"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="查询"
        android:textColor="#ffffff"
        android:background="@drawable/bg_button_select"/>

</LinearLayout>
